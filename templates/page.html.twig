{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% embed '@radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'light',
    utility_classes: ['bg-light'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  <main class="container pt-3 pb-5">
    {% if page.header %}
      <header class="page__header row pb-2">
        <div class="col-sm-12">
          {{ page.header }}
        </div>
      </header>
    {% endif %}
    <div class="row">
    {% if page.sidebar_left %}
      <div class="page__sidebar_left col col-md-3">
        <div class="">
          {{ page.sidebar_left }}
        </div>
      </div>
    {% endif %}
    {% if page.content %}
      <div class="page__content col">
        <div class="">
          {{ page.content }}
        </div>
      </div>
    {% endif %}
    {% if page.sidebar_right %}
      <div class="page__sidebar_right col col-md-3">
        <div class="">
          {{ page.sidebar_right }}
        </div>
      </div>
    {% endif %}
    </div>
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container">
        {{ page.footer }}
      </div>
    </footer>
  {% endif %}
</div>
